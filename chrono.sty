%%: A,B waits for its current timer to expire

\newcommand{\Awaittimer}{
  \ifchronoh \ifdim \pAs<\timerAend\chronosetTsend{A}{\timerAend}\fi
  \else      \ifdim \pAs>\timerAend\chronosetTsend{A}{\timerAend}\fi   \fi}

\newcommand{\Awaittimeri}{
  \ifchronoh \ifdim \pAs<\timerAiend\chronosetTsend{A}{\timerAiend}\fi
  \else      \ifdim \pAs>\timerAiend\chronosetTsend{A}{\timerAiend}\fi \fi}

\newcommand{\Bwaittimer}{
  \ifchronoh \ifdim \pBs<\timerBend\chronosetTsend{B}{\timerBend}\fi
  \else      \ifdim \pBs>\timerBend\chronosetTsend{B}{\timerBend}\fi   \fi}

\newcommand{\Bwaittimeri}{
  \ifchronoh \ifdim \pBs<\timerBiend\chronosetTsend{B}{\timerBend}\fi
  \else      \ifdim \pBs>\timerBiend\chronosetTsend{B}{\timerBend}\fi \fi}


%%: A sends a timed frame to B

\newcommand{\ABtimed}[4][]{  % [keys], flabel, len, tlabel
  \setlength{\chronoxx}{\pAs}
  \AB[#1]{#2}
  \addtolength{\chronoxx}{\ltrans}
  \settimerA{\chronoxx}{#3}{#4}}

\newcommand{\ABtimedi}[4][]{  % [keys], flabel, len, tlabel
  \setlength{\chronoxx}{\pAs}

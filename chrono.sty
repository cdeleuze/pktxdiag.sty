                -- (\csname timer#1end\endcsname,\hpos-\timerhoffset);
  \else
    \draw[thin,<->](\hpos,\csname timer#1start\endcsname-\timertimeoffset)
                -- (\hpos,\csname timer#1end\endcsname+\timertimeoffset);
  \fi
}


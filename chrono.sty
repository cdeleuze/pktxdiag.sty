       \draw[fleche,|-|] (\chronopos,#2*\chronowidth/2) --++(\trans/3,0)
                 decorate[decoration=zigzag,segment length=2mm]
                 {--++(\trans/3,0) node[above=\chronoxx,midway]{#4}}

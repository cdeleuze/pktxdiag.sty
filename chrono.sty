  \pgfmathsetlengthmacro\temp{\chronoTrecv{#1}+\y*#2}
  \pgfkeyslet{/chrono/entities/#1/Trecv}{\temp}}

\newcommand{\wait}[2][1cm]{\chaddtosend{#2}{#1}}


%% timer h position: base on hpos, l/r alignment and offset
%% in horizontal, hpos is negated (left/- is up/+)
%% in vertical, remove 3mm to l timers if neither timerleftbelow nor
%% timerleftbottomup is set
\newcommand{\chronotimerhpos}[3]{ % hpos, l/r, offset
  \ifchronoh-#1+\if #2r-#3\else#3\fi
  \else
  #1+\if #2r#3\else\iftimerleftbelow-#3\else\iftimerleftbottomup-#3\else-#3-3mm\fi\fi\fi\fi}

\newcommand{\settimer}[7]{ % start, len, label, A/B, hpos, l/r, above/below
  \chronoendtimerifactive{#4}
  \csname timer#4activetrue\endcsname
  \csname timer#4cancelfalse\endcsname
  \def\timerstart{\csname timer#4start\endcsname}
  \def\timerend{\csname timer#4end\endcsname}
  \def\timeroffset{\csname timer#4offset\endcsname}
  \def\timerhoffset{\csname chrono#4haddoffset\endcsname}
  \setlength{\timerstart}{#1}
  \setlength{\timerend}{#1}\chronoaddto{\timerend}{#2}
  \def\hpos{\chronotimerhpos{#5}{#6}{\timeroffset}}
  \ifchronoh
      \draw[thin,dotted,<->](\timerstart,\hpos-\timerhoffset)
                         -- (\timerend,\hpos-\timerhoffset) node[midway,sloped,#7]{#3};
  \else
      \draw[thin,dotted,<->](\hpos,\timerstart-\timertimeoffset)
                         -- (\hpos,\timerend+\timertimeoffset) node[midway,sloped,#7]{#3};
  \fi
}


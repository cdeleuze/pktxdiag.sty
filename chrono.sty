%% recvtime  (pBr)
%% rcvsendtime (pBs) for halfduplex

%% l/r s/rnote       r/l s/rnote
%% sendpos
%% recvpos

%% A                 B   for chrononame



\newcommand{\chronoframe}[9][]{ % [keys], label,
  % #3 sendtime, #4 recvtime, #5 rcvsendtime
  % #6 sendpos #7 recvpos #8 l/r snote (rnote has opposite), #9 receiver name A/B

  \setlength{\savedtrans}{\trans}
  \setlength{\savedprop}{\prop}
  \pgfkeys{/chrono/global/.activate family}
  \pgfkeysfiltered{/chrono/.cd,#1}
  \chronosettrans{#2}

  \chrononote{#3}{#6}{#8}{\chronosnoteoffset}{\chronosnote}

  \pgfkeysgetvalue{/chrono/id}{\chronoid}
  \pgfkeysifdefined{/chrono/flows/\chronoid/style}{
    \def\thisstyle{\pgfkeysvalueof{/chrono/flows/\chronoid/style}}}{
    \def\thisstyle{default}}
  \chronoarrow[/chrono/styles/\thisstyle,#1,opacity=\chronogetconf{\chronoid}{opacity}]
              {#6}{#7}{#3}{#2}
 
  \setlength{#4}{#3}\chronoaddto{#4}{\prop}
  \chronoaddto{#4}{\trans}
  \chronoaddto{#3}{\trans}
  \chronoaddto{#3}{\chronospacesame}

  \chrononote{#4-\chronodelay}{#7}{\if#8rl\else r\fi}{\chronornoteoffset}{\chronornote}
  \gdef\chronosnote{\relax}
  \gdef\chronornote{\relax}

  \ifchronodelayed
    % no simpler way to _copy_ the length value?
    \pgfmathqparse{#4-\chronodelay}
    \pgfkeyslet{/chrono/values/#9/\chrononame}{\pgfmathresult}
    \chronodelayedfalse
    \setlength\chronodelay{0mm}
  \fi

  \pgfkeyssetvalue{/chrono/id}{main}
  \setlength{\ltrans}{\trans}
  \setlength{\trans}{\savedtrans}
  \setlength{\prop}{\savedprop}
  \ifchronosync
    \setlength{#5}{#4}\chronoaddto{#5}{\chronospaceother}
  \fi
}


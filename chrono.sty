\newcommand{\canceltimer}[4]{ % pos, A/B, hpos, l/r
  \csname timer#2activefalse\endcsname
  \csname timer#2canceltrue\endcsname
  \def\hpos{\chronotimerhpos{#3}{#4}{\csname timer#2offset\endcsname}}
  \def\timerhoffset{\csname chrono#2haddoffset\endcsname}
  \def\timerend{\csname timer#2end\endcsname}
  \ifchronoh
    \ifnum#1>\timerend\typeout{Expired timer!}
    \node at (#1,\hpos)[draw,red,fill=yellow]{Expired timer!};\else
    \draw[thin,<-](\csname timer#2start\endcsname,\hpos-\timerhoffset) --(#1,\hpos-\timerhoffset);
    \fi
  \else
    \ifnum#1<\timerend\typeout{Expired timer!}
    \node at (\hpos,#1)[draw,red,fill=yellow]{Expired timer!};\else
    \draw[thin,<-](\hpos,\csname
    timer#2start\endcsname-\timertimeoffset) --(\hpos,#1);
    \fi
  \fi
}


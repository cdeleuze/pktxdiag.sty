%%: A sets a timer and sends a frame when it expires

\newcommand{\ABdelayed}[4][]{ % keys, len, tlabel, flabel
  \settimerA{\pAr}{#2}{#3}
  \chronosetTsend{A}{\pAr}\chaddtosend{A}{#2}
  \AB[#1]{#4}
  \chronoendtimerA}

\newcommand{\BAdelayed}[4][]{ % keys, len, tlabel, flabel
